[flake8]
max-line-length = 100
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    materials_env,
    .pytest_cache,
    htmlcov,
    *.egg-info
per-file-ignores =
    tests/*.py: F401,W293
    creep_test.py: F401
    tensile_test.py: F401,E722
show-source = True
statistics = True
count = True
